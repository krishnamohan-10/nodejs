java script asynchronous programming â€“ fetch weather info from
https://api.openweathermap.org/data/2.5/weather?q=${inputCity}&units=metric&lang=en
&appid=${APIKey} With APIKey 69fb4b02358c349120c314202ebb13ac using Promise
async/await syntax & show the temperature info in a graph, using chart.js
(https://cdn.jsdelivr.net/npm/chart.js).

<!DOCTYPE html>
<html>
    <head>
        <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
        <script>
            const APIKey = '69fb4b02358c349120c314202ebb13ac';

            let tempArr = [];
            let chartLabels = [];
            let chartCreated = false;
            let myChart;

            function getCurTime() {
                const currentDate = new Date();
                const hours = currentDate.getHours();
                const minutes = currentDate.getMinutes();
                const seconds = currentDate.getSeconds();
                return `${hours}:${minutes}:${seconds}`;
            }

            async function getWeatherInfo() {
                let inputCity = document.getElementById('textbox1').value;
                console.log(inputCity);

                const apiUrl =
`https://api.openweathermap.org/data/2.5/weather?q=${inputCity}&units=metric&lang=en&appid=${APIKey}`;

                try{
                    let response = await fetch(apiUrl);
                    let data = await response.json();
                    console.log(data);

                    let city = data.name;
                    let temp = data.main.temp;
                    let desc = data.weather[0].description;

                    document.getElementById('cityName').textContent = `${city}`;
                    document.getElementById('temperature').textContent = `${temp}`;
                    document.getElementById('description').textContent = `${desc}`;

                    tempArr.push(temp);
                    chartLabels.push(getCurTime());

                    if (!chartCreated) {
                        myChart = new Chart(document.getElementById('MyCanvas1').getContext('2d'), {
                            type: 'bar',
                            data: {
                                labels: chartLabels,
                                datasets: [{
                                    data: tempArr,
                                    borderColor: 'red',
                                    borderWidth: 2
                                }]
                            }
                        });
                        chartCreated = true;
                    } else {
                        myChart.update();
                    }

                } catch (error) {
                    console.log(`Reason is : ${error}`);
                }
                finally {
                    console.log('Execution Completed');
                }
            }

            function getWeatherInfoPeriodically() {
                setInterval(getWeatherInfo, 5000);
            }
        </script>
    </head>

    <body>
        <input type="text" id="textbox1" placeholder="Enter City Name" style="margin-right: 5px;">
        <button onclick="getWeatherInfoPeriodically()">Get Weather Info</button>
        <br>

        <h1>Latest Weather Info</h1>
        <div id="weather">
          <h2>City : <label id="cityName"></label></h2>
          Temperature : <label id="temperature"></label>
          <br>
          Weather Description: <label id="description"></label>
        </div>

        <h1>Weather Trend</h1>
        <canvas id="MyCanvas1" width="300" height="150"></canvas>
    </body>
</html>
